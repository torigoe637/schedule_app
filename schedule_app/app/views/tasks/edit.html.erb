<h3>スケジュール編集</h3>

<%= render "shared/error", obj: @task %>

<%= form_with model: @task do |f| %>
  <table>
    <tr>
      <th><%= f.label :title ,"タイトル" %></th>
      <td><%= f.text_field :title, size: 35 %></td>
    </tr>

    <tr>
      <th><%= f.label :start ,"開始日" %></th>
      <td><%= f.date_field :start %></td>
    </tr>

    <tr>
      <th><%= f.label :finish ,"終了日" %></th>
      <td><%= f.date_field :finish %></td>
    </tr>

    <tr>
      <th><%= f.label :allday ,"終日" %></th>
      <td><%= f.check_box :allday %> <br>
          <span style = "font-size:15px; "> 終日の場合はチェックを入れます </span>
      </td>
    </tr>

    <tr>
      <th><%= f.label :memo ,"スケジュールメモ" %></th>
      <td><div><%= f.text_area :memo, size: "35x9" %></div></td>
    </tr>


   <style>
    input[type="date"] {
    width: 250px;
    }
   </style>
  </table>

  <div>
    <ul>
      <li><%= f.submit "スケジュール編集を完了する"%></li>
      <li><%= link_to "スケジュール一覧に戻る", :tasks %></li>
    </ul>
  </div>
<% end %>

<%= render "shared/tasks" %>